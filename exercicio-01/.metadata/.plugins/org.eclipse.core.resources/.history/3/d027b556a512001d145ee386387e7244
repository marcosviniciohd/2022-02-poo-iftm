public class Exemplo4 {
	
public static int verificaNumero(int numero){
		
		if (numero % 2 == 0) {
			System.out.println("O numero " + numero + " é par.");
		} else {
			System.out.println("O numero " + numero + " é impar.");
		}
		
		return numero;
	}

	public static void main(String[] args) {
		
		
		
	}

}
