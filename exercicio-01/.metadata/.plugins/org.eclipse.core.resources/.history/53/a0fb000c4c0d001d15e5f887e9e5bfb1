
public class Programa {
	
	public static void main(String[] args) {
		
		public static void verificaNumero(int numero) {
			if(numero % 2 == 0) {
				System.out.println("O número " + numero + " é par");
			}else {
				System.out.println("O número " + numero + " é impar");
			}
		}
		
	}
}
		        


